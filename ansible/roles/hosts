# Fichier d'inventaire Ansible pour configurer Prometheus sur les serveurs Debian

# Groupe des serveurs de monitoring
[monitoring_servers]
192.168.1.100    ansible_user=admin ansible_ssh_private_key_file=/chemin/vers/la/cle_privee
192.168.1.101    ansible_user=admin ansible_ssh_private_key_file=/chemin/vers/la/cle_privee

# Groupe des serveurs nodes à surveiller
[nodes]
192.168.1.200    ansible_user=admin ansible_ssh_private_key_file=/chemin/vers/la/cle_privee
192.168.1.201    ansible_user=admin ansible_ssh_private_key_file=/chemin/vers/la/cle_privee

# Exemple de groupe avec un serveur distant spécifique
[alertmanagers]
alertmanager1.example.com    ansible_user=admin ansible_ssh_private_key_file=/chemin/vers/la/cle_privee
